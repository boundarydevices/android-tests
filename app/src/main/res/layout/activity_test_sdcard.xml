<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.boundarydevices.platformtesting.TestSdcard">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sdcard_progress"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/sdcard_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/sdcard_progress"
        android:layout_margin="30dp"
        android:gravity="center"
        android:textSize="12pt" />

    <Button
        android:id="@+id/button_sdcard_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:layout_below="@id/sdcard_text"
        android:layout_margin="30dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_sdcard_force"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/force"
        android:layout_below="@id/button_sdcard_skip"
        android:layout_margin="30dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_sdcard_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no"
        android:layout_below="@id/sdcard_text"
        android:layout_margin="30dp"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/button_sdcard_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yes"
        android:layout_below="@id/sdcard_text"
        android:layout_margin="30dp"
        android:layout_alignParentRight="true" />
</RelativeLayout>
